CREATE TABLE `User` (
  `username` varchar(30),
  `password` varbinary(256),
  `firstname` varchar(30),
  `lastname` varchar(30),
  `phone` varchar(10),
  `email` varchar(30),
  `zipcode` char(5),
  `register_date` date,
  `authority` enum('Customer', 'Dealer', 'DBManager') DEFAULT 'Customer',
  PRIMARY KEY(username)
);

CREATE TABLE `Customer` (
  `username` varchar(30),
  `balance` decimal(10, 2) DEFAULT 0.00,
  
  PRIMARY KEY(username),
  FOREIGN KEY(username) REFERENCES User(username) ON DELETE CASCADE
);
//add follow list


CREATE TABLE `Dealer` (
  `username` varchar(30),
  `star_count` integer DEFAULT 0,
  
  PRIMARY KEY(username),
  FOREIGN KEY(username) REFERENCES User(username) ON DELETE CASCADE
);


CREATE_TABLE 'Inventory` {    //Think of name, Also following if user is customer
  `username` varchar(30), //foreign key
  `car_id` integer       // foreign key
}

CREATE_TABLE `Appointment` {
  `appointment_id`, integer
  `username` varchar(30),     //foreign key for customer
  `username` varchar(30),     //foreign key for dealer
  `car_id`  integer, 		  //foreign key
  `appointment_time` datetime,  //primary key
  `appointment_services`       //foreign key 
}

CREATE_TABLE `Appointment_Service` {
  `appointment_id` integer,  //primary key
  `serivceType` varchar(30)   //primary key
  
}

CREATE_TABLE `Services` {
  `serivceType` varchar(30),    //primary key
  `price` varchar(30), 
}

CREATE TABLE `Car` (
  `car_id` integer,
  `modelName` varchar(30),   //foreign key
  `typeName` varchar(30),	  //forign key
  `place_of_production` varchar(30),
  `imageURL` varchar(100),
  `price` decimal(5, 2)
);

CREATE TABLE `Type` (
  `name` varchar(30),
  `target_people` varchar(30),
  `description` text,
  `keyword` enum(.....)
);

CREATE TABLE `Model` (
  `name` varchar(30),
  `brand_name` varchar(30),
  `creation_year` date,
  `price_min` decimal(*,2),
  `price_max` decimal(*,2),
  `description` text
);

CREATE TABLE `Transaction` (
   `car_id` integer,
   `username` varchar,     //customer
   `username` varchar,     //dealer
);

CREATE TABLE `Review` (
  `car_id` integer,              //foreign key for dealer
  `dealer` integer,             //foreign key
  `release_time` datetime,
  `visible` enum (....),
  `comment` text,
  `star_count` integer
);

CREATE TABLE `Report` (
  `report_id` integer,
  `car_id` integer,    //foreign key
  `check_date` date,
  `checker_review` text,
  `statues` enum(.....)
  
  /*
  `owner_initial` varchar(30),
  `owner_type` enum(....),
  `duration` float(*,1),
  `time_begin` date,
  `time_end` date,
  `accident_count` integer
);

