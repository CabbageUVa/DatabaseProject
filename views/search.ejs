<% include partials/header %>
<div class="container">
    <div class='row'>
        <h1 style="text-align:center">Find Your Car</h1>
        <div style="width:30%; margin:25px auto">
            <form action="/Search" method="POST">

            	<div class="form-group">
                  	<select id="brands" class="selectpicker form-control" data-live-search="true" name="Brand">
                  	  <option selected="selected">Brand</option>
					  <option value="Jeep">Jeep</option>
					  <option value="GMC">GMC</option>
					  <option value="Ford">Ford</option>
					  <option value="Toyota">Toyota</option>
					</select>
             	</div>

                <div id="models" class="form-group">
                  	<select class="selectpicker form-control" name="Model">
						  <option selected="selected">Model</option>
					</select>
             	</div>
				 
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                
            </form>
            <a href="/">Go back</a>
        </div>
        
    </div>
</div>
<script>
	  $(document).ready(function () {
	    $('.selectpicker').selectpicker();
	  });
</script>
<script src="search.js"></script>
<% include partials/footer %>