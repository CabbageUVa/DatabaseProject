<% include partials/header %>
	<!-- LOGIN FORM -->
	<div class="container">
    <div class='row'>
        <h1 style="text-align:center">Sign Up</h1>
        <div style="width:30%; margin:25px auto">
			<% if (typeof errorSignUp != "undefined")  { %>
			<div class="alert alert-danger">
				<%= errorSignUp %>
			</div>
			<% } %>
            <form action="/newUser" method="POST">
                <div class="form-group">
                    <input class="form-control" placeholder="Username" type="text" name="username">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Password" type="password" name="passwd" >
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Confirm password" type="password" name="passwd2" >
                </div>
                <div class="form-group">
                    <input type ="submit" class="btn btn-lg btn-primary btn-block" value="Sign up">
                </div>
            </form>
			<a href="/login">Login instead</a><br>
            <a href="/">Go back</a>
        </div>
        
    </div>
	</div>

	<hr>

	<p>Already have an account? <a href="/login">Login</a></p>
	<p>Or go <a href="/">home</a>.</p>
<% include partials/footer %>
