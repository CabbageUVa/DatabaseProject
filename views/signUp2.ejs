<% include partials/header %>
<div class="container">
    <div class='row'>
		<h1 style="text-align:center">Account created.</h1>
        <h1 style="text-align:center">Please fill out your information</h1>
        <div style="width:30%; margin:25px auto">
			<% if (typeof errorSignUp2 != "undefined")  { %>
			<div class="alert alert-danger">
				<%= errorSignUp2 %>
			</div>
			<% } %>
            <form action="/newUser2" method="POST">
				<div class="form-group">
                    <input class="form-control" placeholder="Name" type= "text" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="tel" placeholder="Phone" name="phone" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="zipcode" placeholder="Zipcode" name="zipcode">
                </div>
				<div class="form-group">
                    <input class="form-control" type="email" placeholder="Email" name="email">
                </div>
                <div class="form-group">
                    <input type ="submit" class="btn btn-lg btn-primary btn-block" value="Sign up">
                </div>
            </form>
        </div>
        
    </div>
</div>
<% include partials/footer %>