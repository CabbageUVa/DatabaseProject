<% include partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to EasyAuto</h1>
            <p>Find a car you love</p>
            <a href="/search" class="btn btn-primary"> Search </a>
			<% if (authority === "Dealer") { %>
            <a href="/Car/new" class="btn btn-success"> Post </a>
			<% } %>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>Cars you may like</h3>
        </div>
    </div>
    <!--deal with different images size-->
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% Cars.forEach(function(Car){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail index">
                   <img src="<%= Car.imageURL %>">
                   <div class="caption">
                       <h4><%= Car.brand_name %></h4>
                   </div>
                   <p>
                       <a href="/car/<%= Car.car_id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include partials/footer %>